<h1> Now Playing </h1>
<div class="container-fluid text-center">
    <div class="row">
        {{#each movies}}
        <div class="col-md-4">
            <a href="/movies/{{this.id}}">
                <img style="width: 30%" src="https://image.tmdb.org/t/p/w500/{{this.poster_path}}">
                <p>{{this.title}}</p>
            </a>
        </div>
        {{/each}}
    </div>
</div>
