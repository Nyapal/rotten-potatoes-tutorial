<h1> Now Playing </h1>
<div class="container text-primary">

</div>
<div class="row">
<div class="row">
    {{#each movies}}
        <div class="col-sm-3">
            <a href="/movies/{{this.id}}">
                <img style="width: 100px" src="https://image.tmdb.org/t/p/w500/{{this.poster_path}}">
                <p style="list-style-type: none;">{{this.title}}</p>
            </a>
        </div>
    {{/each}}
</div>
